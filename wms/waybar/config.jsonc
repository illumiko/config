    // "margin-left": 15,
    "fixed-center":true,
    // "width":500,
    "modules-left": ["custom/notification","bluetooth"],
    "modules-center":["clock"],
    "modules-right": ["hyprland/workspaces", "custom/power_profile","pulseaudio","battery","network","tray", ],

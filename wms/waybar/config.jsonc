{
    "layer": "bottom",
    "position": "bottom",
    "mod": "dock",
    "exclusive": true,
    "spacing": 0,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 5,
    "margin-bottom": 0,
    "margin-right":10,
    "margin-left":10,
    "margin-top": 5,
